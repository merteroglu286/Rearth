<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.VerifyNumberFragment">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        android:text="SMS Kodu"
        android:textColor="@color/light_black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/txtYour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        android:text="Telefonuna gÃ¶nderilen 6 haneli kodu gir."
        android:textColor="@color/darkBlue"
        android:textSize="16dp"
        tools:ignore="RtlCompat" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtYour">


        <com.chaos.view.PinView
            android:id="@+id/otp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="000000"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="@color/light_black"
            android:textColorHint="@color/light_black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cursorColor="@color/light_black"
            app:cursorWidth="2dp"
            app:hideLineWhenFilled="false"
            app:itemCount="6"
            app:itemHeight="64dp"
            app:itemRadius="4dp"
            app:itemSpacing="10dp"
            app:itemWidth="48dp"
            app:lineColor="@color/main_blue"
            app:lineWidth="2dp"
            app:viewType="rectangle" />

        <TextView
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/otp_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/button_background_1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Onayla"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#73A7A7A7"
        android:visibility="invisible">
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/main_blue" />
    </RelativeLayout>



</RelativeLayout>