<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/linearContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_notice_detail_green"
        >
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/infoImageView"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/user_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/infoName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="username"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:gravity="start"/>

                    <TextView
                        android:id="@+id/infoTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="16dp"
                        android:gravity="end"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/txtİnfoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="120dp"
                    android:text="bildiri mesajı burada gözükecek"
                    android:textSize="16dp"
                    android:layout_marginTop="4dp"/>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearContext"
            android:layout_marginStart="20dp"
            android:layout_marginVertical="8dp"

            >
            <ImageView
                android:id="@+id/imgRating"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_star_24"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/countRating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="16dp"
                android:visibility="visible"
                android:gravity="center_vertical"
                android:layout_marginStart="1dp"/>

        </LinearLayout>

    </LinearLayout>

